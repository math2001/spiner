body, html 
	margin 0
	padding 0
	width 100%
	height 100%
	background-color #333
	color white
	font-family monaco

*
	outline none

.nav 
	display none
	*
		display inline-block

.main
	position relative
	width 300px
	height 500px
	background-color #222
	margin auto
	

	.panel
		position absolute
		height 100%
		width 100%
		display block
		top -100%
		&[active]
			top 0
		&[data-name=game]
			overflow hidden
		
		&[data-name=menu]
			ul
				padding 0
				list-style none
				margin 0
				height 100%
				li
					height 33.33333333333334%
					display block
					position relative
					display table
					width 100%
					&:not(:last-of-type)
						border-bottom 1px solid #aaa
					button
					span
						padding 0
						background none
						border none
						color white
						font-size 100%
						font-family monaco
						width 100%
						text-align center
						height 100%
						display table-cell
						text-align center
						vertical-align middle
					button:hover
					button:active
					button:focus
						background-color #ddd2


.point
	width 30px
	height @width
	display block
	position absolute
	&.blue
		background-color #008aff
	&.red
		background-color red

.wall
	background-color #aaa
	position absolute